{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "sourceMap": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "typeRoots": ["src/types", "node_modules/@types"],
    "baseUrl": "./"
  },
  "include": ["src/**/*"]
}
